@model IEnumerable<Test2.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee List</h1>
@{
    var successMessage = TempData["empSuccess"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <script>
        alert("@successMessage");
    </script>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
@if (!Model.Any())
{
    <div class="alert alert-warning text-center">No Record is available.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Emp_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Emp_Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Emp_Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Emp_DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Emp_ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Emp_ID">Details</a> |
                        <a onclick="confirmDelete(@item.Emp_ID)" asp-action="Delete" asp-route-id="@item.Emp_ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    function confirmDelete(Emp_ID)
    {
        if(confirm("Are you sure you want to delete this employee parmanently?"))
        {
            window.location.href = '/Employee/Delete/${Emp_ID}';
        }
    }
</script>